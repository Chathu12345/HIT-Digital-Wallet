<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_contacts"
    tools:context=".MenuScreen"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="186dp"
        tools:layout_editor_absoluteY="52dp">

        <!--        <LinearLayout-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="match_parent"-->
        <!--            android:orientation="horizontal">-->


        <ImageView
            android:id="@+id/arrow"
            android:layout_width="24sp"
            android:layout_height="24sp"
            android:layout_marginStart="50sp"
            android:layout_marginTop="24sp"
            android:src="@drawable/ic_baseline_arrow_back_24" />


        <TextView
            android:id="@+id/menu_topic"
            style="@style/text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="100sp"
            android:layout_marginTop="24sp"
            android:text="Menu"
            android:letterSpacing="0.1"
            android:textColor="@color/topic_black"
            android:textSize="16sp"
            android:textStyle="normal" />


    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/searchbar"
            android:layout_marginTop="80sp"
            android:layout_marginStart="50sp"/>


        <TextView
            style="@style/text_style"
            android:layout_width="55sp"
            android:layout_height="14sp"
            android:layout_marginStart="-290sp"
            android:layout_marginTop="95sp"
            android:text="Search"
            android:letterSpacing="0.1"
            android:textColor="@color/search_color"
            android:textSize="13sp"
            android:textStyle="normal" />

        <ImageView
            android:layout_width="20sp"
            android:layout_height="20sp"
            android:layout_marginStart="200sp"
            android:layout_marginTop="95sp"
            android:src="@drawable/ic_search" />

    </LinearLayout>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <TextView
            style="@style/text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shortcuts"
            android:letterSpacing="0.1"
            android:layout_marginTop="150sp"
            android:layout_marginStart="45sp"
            android:textColor="@color/search_color"
            android:textSize="14sp"
            android:textStyle="normal"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Customize"
            android:letterSpacing="0.1"
            android:layout_marginTop="150sp"
            android:layout_marginStart="175sp"/>

        </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="180sp"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout"
        app:layout_constraintTop_toTopOf="@+id/linearLayout" />



    <!--    </LinearLayout>-->
</androidx.constraintlayout.widget.ConstraintLayout>