<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_menu_screen"
    tools:context=".MenuScreen"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="186dp"
        tools:layout_editor_absoluteY="52dp">


        <ImageView
            android:id="@+id/arrow"
            android:layout_width="24sp"
            android:layout_height="24sp"
            android:layout_marginStart="50sp"
            android:layout_marginTop="24sp"
            android:src="@drawable/ic_baseline_arrow_back_24" />


        <TextView
            android:id="@+id/menu_topic"
            style="@style/text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="100sp"
            android:layout_marginTop="24sp"
            android:text="Menu"
            android:letterSpacing="0.1"
            android:textColor="@color/topic_black"
            android:textSize="16sp"
            android:textStyle="normal" />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:layout_width="315dp"
            android:layout_height="50dp"
            android:layout_marginTop="100dp"
            android:layout_marginStart="50sp"
            android:layout_marginRight="20sp"
            android:background="@drawable/search_bar"
            android:drawableEnd="@drawable/ic_search"
            android:hint="Search"
            android:letterSpacing="0.1"
            android:paddingStart="25dp"
            android:paddingEnd="25dp"
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="300sp"
        android:layout_marginStart="-40dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="-30dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toTopOf="@+id/recyclerView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            style="@style/text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="0sp"
            android:layout_marginTop="100sp"
            android:letterSpacing="0.1"
            android:text="Shortcuts"
            android:textColor="@color/search_color"
            android:textSize="14sp"
            android:textStyle="normal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="175sp"
            android:layout_marginLeft="100sp"
            android:layout_marginTop="100sp"
            android:letterSpacing="0.1"
            android:text="Customize" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:background="@drawable/bg_menu_list1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="250sp"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout"
        app:layout_constraintTop_toTopOf="@+id/linearLayout" />


</androidx.constraintlayout.widget.ConstraintLayout>